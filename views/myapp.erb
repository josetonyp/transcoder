<html>
  <head>
    <title>My Fast Transcriber</title>


    <link rel="stylesheet" href="/javascripts/bower_components/bootstrap/dist/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="/javascripts/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/app.css">


  </head>
  <body ng-controller="AppController" ng-cloak>

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation" ng-controller="MenuController">
      <div class="container-fluid">
        <div class="navbar-header" >
          <a class="navbar-brand" ng-show="user" href="#/home">Folders ({{folders.length}})</a>
          <a class="navbar-brand" ng-show="user.admin" href="#/users">Users</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li ng-show="user"><a href="#" >{{ user.audios.total_time }} | {{ user.audios.translated }} | {{ user.audios.reviewed }} </a></li>
            <li ng-show="user"><a href="#" >{{ user.name }}</a></li>
            <li><a href="#" ng-click="signout()">Logout</a></li>
          </ul>
        </div><!--/.navbar-collapse -->
      </div>
    </div>
    <br/>
    <br/>
    <br/>
    <div class="container" >
      <div class="row">
        <div class="col-md-9" ng-view><%= yield %></div>
        <div class="col-md-3">
          <p>
            <div><em>ctrl+m</em> : <span style="color:#aaa"> [m]</span></div>
            <div><em>ctrl+l</em> : <span style="color:#aaa"> [f]</span></div>
            <div><em>ctrl+c</em> : <span style="color:#aaa">\contact</span></div>
            <div><em>ctrl+j</em> : <span style="color:#aaa">\mp</span></div>
            <div><em>ctrl+i</em> : <span style="color:#aaa">\i:</span></div>
            <div><em>ctrl+u</em> : <span style="color:#aaa">\noise:unintelligeble</span></div>
            <div><em>ctrl+g</em> : <span style="color:#aaa">\noise:bgspeech</span></div>
            <div><em>ctrl+r</em> : <span style="color:#aaa">&lt;intruder&gt;</span></div>
            <div><em>ctrl+w</em> : <span style="color:#aaa">[bad wave]</span></div>
            <div><em>ctrl+,</em> : <span style="color:#aaa">\comma\</span></div>
            <div><em>ctrl+.</em> : <span style="color:#aaa">\period\</span></div>
          </p>
        </div>
      </div>


    </div>


    <script src="/javascripts/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="/javascripts/jquery.textarea.caret.js"></script>
    <script src="/javascripts/bower_components/angular/angular.js"></script>
    <script src="/javascripts/bower_components/angular-route/angular-route.js"></script>
    <script src="/javascripts/bower_components/lodash/dist/lodash.min.js"></script>
    <script src="/javascripts/bower_components/restangular/dist/restangular.min.js"></script>
    <script src="/javascripts/app.js"></script>
  </body>

</html>