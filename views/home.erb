<div>
  <% files.each_with_index do |file, index| %>
      <% if file.match /\.wav$/ %>
    <div class="col-md-3 audio" style="margin-bottom:20px; display:block">
      <audio controls style="width:260px;" tabindex="0" >
        <source src="<%= file.gsub(/^public/, "") %>" type="audio/wav">
        Your browser does not support the audio element.
      </audio>
      <br/>
      <br/>
      <textarea tabindex="<%= index + 1 %>" cols="40" rows="2" id="<%= file + ".txt"%>"><%= ( (text = File.open(file << ".txt").read.to_s.strip) != "" ) ? text : "[bad wave] ??" %></textarea>
    </div>
      <% end %>
  <% end %>
</div>

<br/>
